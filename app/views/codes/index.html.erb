<h1>Listing codes</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Product ID</th>
    <th>Amount</th>
    <th>Description</th>
    <th>Currency</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @codes.each do |code| %>
  <tr>
    <td><%= code.code %></td>
    <td><%= code.productId %></td>
    <td><%= code.amount %></td>
    <td><%= code.description %></td>
    <td><%= code.currency %></td>
    <td><%= link_to 'XML', :action => "lookup", :code => code.code %></td>
    <td><%= link_to 'Show', code %></td>
    <td><%= link_to 'Edit', edit_code_path(code) %></td>
    <td><%= link_to 'Destroy', code, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

